<div class="jumbotron report-options">
  <div class="container">
    <%= form_tag(admin_statements_path, method: :get, class: "form", role: "form") do %>
      <div class="row">
        <div class="col-md-4 option-field">
          <%= text_field_tag :containing, @containing, class: "form-control pick-a-date", placeholder: "Statments containing date" %>
        </div>

        <div class="col-md-4 option-field">
          <%= select_tag :users, options_from_collection_for_select(@all_users, :id, :fullname, params[:users]), { class: "form-control chosen-select", "data-placeholder" => "Filter by users", multiple: true } %>
        </div>

        <div class="col-md-4 option-field">
          <%= select_tag :state, options_for_select(statement_states_select, params[:state]), { class: "form-control chosen-select", include_blank: 'Filter by state' } %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
          <%= button_tag "Fetch", class: "btn btn-primary control-btn" %>
        </div>
        <div class="col-md-offset-8 col-md-2">
          <%= link_to "New Statement", [:new, :admin, :statement], class: 'btn btn-primary control-btn pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <%= paginate @statements %>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th>For</th>
        <th>From</th>
        <th>To</th>
        <th>Post Date</th>
        <th>State</th>
        <th>Hours</th>
        <th>Subtotal</th>
        <th>Tax Amt</th>
        <th>Total</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render @statements %>
    </tbody>
  </table>

</div>
