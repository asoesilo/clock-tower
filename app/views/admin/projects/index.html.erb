<div class="container padding-top-20">
  <div class="row">
    <div class="col-md-2 vcenter">
      <h1>Projects</h1>
    </div>
    <div class="vcenter">
      <%= link_to "Create new project", new_admin_project_path %>
    </div>
  </div>

  <% if @projects && @projects.any? %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Created at</th>
          <th>Location</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @projects %>
      </tbody>
    </table>
  <% else %>
    <div>No projects</div>
  <% end %>
</div>