<%= render 'admin/shared/form_error', object: @location %>

<%= form_for [:admin, @location], html: {class: 'form'} do |f| %>
  <%= f.text_field :name, {class: "form-control first-control", placeholder: "Name"} %>
  <%= f.select :province, Location::HOLIDAY_CODES.keys, { include_blank: 'Province' }, {class: "form-control mid-control"} %>
  <%= f.text_field :tax_name, {class: "form-control mid-control", placeholder: "Tax Name"} %>
  <%= f.text_field :tax_percent, {class: "form-control last-control", placeholder: "Tax %"} %>

  <%= f.submit "Submit", class: "btn btn-primary btn-block control-btn" %>
<% end %>