<%= render 'admin/shared/form_error', object: @user %>

<%= form.email_field :email, class: "form-control first-control", placeholder: "Email address" %>

<%= form.text_field :firstname, class: "form-control mid-control", placeholder: "First name" %>

<%= form.text_field :lastname, class: "form-control mid-control", placeholder: "Last name" %>

<%= form.select :location_id, locations_select_options, { include_blank: "Location" }, { class: "form-control mid-control" } %>

<%= form.text_field :company_name, class: "form-control mid-control", placeholder: "Company Name" %>

<%= form.password_field :password, class: "form-control mid-control", placeholder: "Password" %>
<%= form.password_field :password_confirmation, class: "form-control mid-control", placeholder: "Confirm password" %>

<%= form.text_field :rate, class: "form-control mid-control", placeholder: "Hourly Rate" %>
<%= form.text_field :secondary_rate, class: "form-control mid-control", placeholder: "Secondary Hourly Rate" %>
<%= form.text_field :holiday_rate_multiplier, class: "form-control mid-control", placeholder: "Holiday Rate Multiplier" %>
<%= form.text_field :tax_number, class: "form-control mid-control", placeholder: "GST / HST Number" %>

<%= form.label :has_tax, class: "form-control mid-control" do %>
  <%= form.check_box :has_tax %>
  <small><%= form.label :has_tax, "Apply Tax" %></small>
<% end %>

<%= form.label :hourly, class: "form-control mid-control" do %>
  <%= form.check_box :hourly %>
  <small><%= form.label :hourly, "Hourly (Contractor)" %></small>
<% end %>

<%= form.label :is_admin, class: "form-control mid-control" do %>
  <%= form.check_box :is_admin %>
  <small><%= form.label :is_admin, "Administrator" %></small>
<% end %>

<%= form.label :receive_admin_email,  class: "form-control mid-control" do %>
  <%= form.check_box :receive_admin_email %>
  <small><%= form.label :receive_admin_email, "Recieve Admin emails?" %></small>
<% end %>

<%= form.label :active, class: "form-control last-control" do %>
  <%= form.check_box :active %>
  <small><%= form.label :active, "Active" %></small>
<% end %>
