<div class="container padding-top-20">
  <div class="row">
    <div class="col-md-2 vcenter">
      <h1>Users</h1>
    </div>
    <div class="vcenter">
      <%= link_to "Create new user", new_admin_user_path %>
    </div>
  </div>

  <% if @users && @users.any? %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Location</th>
          <th>Last Entry</th>
          <th>Active</th>
          <th>Admin</th>
          <th style="width:40px"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>
  <% else %>
    <div>No users</div>
  <% end %>
</div>