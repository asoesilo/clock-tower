<div class="jumbotron report-options">
  <div class="container">
    <h3 class='text-center'><%= @statement.from.to_s(:humanly) %> - <%= @statement.to.to_s(:humanly) %></h3>
  </div>
</div>
<div class="container">
  <table class="table table-hover">
    <thead>
      <th>Entry Date</th>
      <th>Hourly Rate</th>
      <th>Tax %</th>
      <th>Duration in Hours</th>
      <th>Subtotal</th>
      <th>Tax</th>
      <th>Total</th>
    </thead>
    <tbody>
      <% entries.each do |entry| %>
        <%= render 'entry', entry: entry %>
      <% end %>
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th><%= @statement.hours %></th>
        <th><%= number_to_currency @statement.subtotal %></th>
        <th><%= number_to_currency @statement.tax_amount %></th>
        <th><%= number_to_currency @statement.total %></th>
      </tr>
    </tbody>
  </table>
</div>