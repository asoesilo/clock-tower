<tr class="entry-row" id=<%= "entry-#{time_entry.id}"%> >
  <td class="task"><%= time_entry.task.name %></td>
  <td class="project"><%= time_entry.project.name %></td>
  <td class="date"><%= time_entry.entry_date.to_s(:humanly) %></td>
  <td class="hours"><%= time_entry.duration_in_hours %></td>
  <td class="comments"><%= time_entry.comments %></td>
  <td>
  <% if time_entry.editable? %>
    <%= link_to "Edit", "#", data: {
      toggle: "modal", target: "#entry-edit",
      project_id: time_entry.project.id,
      task_id: time_entry.task.id,
      entry_date: time_entry.entry_date,
      duration: time_entry.duration_in_hours,
      comments: time_entry.comments,
      entry_id: time_entry.id } %>
     |
    <%= link_to "Delete", "/api/time_entries/#{time_entry.id}", class: 'delete', method: 'delete', remote: true, data: { confirm: "This will delete the Time Entry, You sure?" } %>
  <% else %>
    Locked
  <% end %>
  </td>
</tr>
